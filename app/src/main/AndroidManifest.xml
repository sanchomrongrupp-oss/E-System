<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.example.e_system">

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.ESystem"
            tools:targetApi="31">
        <!-- Splash Screen -->
        <activity
                android:name=".SplashActivity"
                android:exported="true"
                android:label="@string/title_activity_splash"
                android:theme="@style/Theme.ESystem">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Intro Screens -->
        <activity
                android:name=".ProfileScreen"
                android:exported="false"
                android:label="@string/title_activity_profile"
                android:theme="@style/Theme.ESystem" />
        <activity
                android:name=".IntroFirstActivity"
                android:exported="true"
                android:label="@string/title_activity_intro_first"
                android:theme="@style/Theme.ESystem" />
        <activity
                android:name=".IntroSecondActivity"
                android:exported="true"
                android:label="@string/title_activity_intro_second"
                android:theme="@style/Theme.ESystem" />
        <activity
                android:name=".IntroThirdActivity"
                android:exported="true"
                android:label="@string/title_activity_intro_third"
                android:theme="@style/Theme.ESystem" /> <!-- Main & Sign-in -->
        <activity
                android:name=".SigInActivity"
                android:exported="true"
                android:label="@string/title_activity_sign_in"
                android:theme="@style/Theme.ESystem" />
        <activity
                android:name=".Home"
                android:exported="true"
                android:label="@string/title_activity_home"
                android:theme="@style/Theme.ESystem" />
        <activity
                android:name=".AttendanceScreen"
                android:exported="true"
                android:label="@string/title_activity_attendance"
                android:theme="@style/Theme.ESystem" />
        <activity
                android:name=".ExerciseScreen"
                android:exported="true"
                android:label="@string/title_activity_exercise"
                android:theme="@style/Theme.ESystem" />
        <activity
                android:name=".MainActivity"
                android:exported="true"
                android:label="@string/title_activity_main"
                android:theme="@style/Theme.ESystem" />
    </application>

</manifest>